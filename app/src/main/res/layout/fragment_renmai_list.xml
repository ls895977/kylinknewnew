<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.maoyongxin.myapplication.ui.editapp.findfragment.renmai_list">

 <android.support.v7.widget.Toolbar
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/toolbar_top"
     android:background="@color/white"
     app:title="人脉清单"

     >


 </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/renmai_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar_top"
        android:layout_marginTop="@dimen/album_dp_10"

        >
        <LinearLayout
            android:id="@+id/ling_minpian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="@dimen/album_dp_4"
            android:layout_marginBottom="@dimen/album_dp_4"
            android:padding="@dimen/album_dp_10"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/album_dp_10"
                android:layout_marginRight="@dimen/album_dp_10"
                android:src="@mipmap/mingpianshoucang"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="名片收藏"
                />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_myteam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="@dimen/album_dp_10"
            android:layout_marginTop="@dimen/album_dp_4"
            android:layout_marginBottom="@dimen/album_dp_4"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/album_dp_10"
                android:layout_marginRight="@dimen/album_dp_10"
                android:background="@color/white"
                android:src="@mipmap/woderenmai"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的记录"
                android:textSize="20dp" />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_myshanghui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="@dimen/album_dp_10"
            android:layout_marginTop="@dimen/album_dp_4"
            android:layout_marginBottom="@dimen/album_dp_4"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/album_dp_10"
                android:layout_marginRight="@dimen/album_dp_10"
                android:src="@mipmap/my_team"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我加入的商会"
                android:textSize="20dp"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="@dimen/album_dp_4"
            android:layout_marginBottom="@dimen/album_dp_4"
            >


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="@dimen/album_dp_10"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/album_dp_10"
                android:layout_marginRight="@dimen/album_dp_10"
                android:src="@mipmap/my_team"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="备忘录"

                />



        </LinearLayout>
    </LinearLayout>
<TextView
    android:layout_below="@+id/renmai_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="人脉统计"
    android:layout_margin="20dp"
    android:id="@+id/tv_beiwanglu"
    />

    <TextView
        android:layout_below="@+id/renmai_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text=" + 创建备忘录"
        android:layout_margin="20dp"
        android:textColor="@color/colorAccent"
        />

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/album_dp_10"
        android:layout_below="@+id/tv_beiwanglu"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/album_dp_10"
        android:elevation="@dimen/album_dp_1"
        android:layout_height="match_parent">


    </android.support.v7.widget.CardView>
</RelativeLayout>
