<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_margin="2dp"
    android:padding="3dp"
    >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gridId"
                android:visibility="gone"/>
    <android.support.v7.widget.CardView
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:cardCornerRadius="18dp"
        android:background="@color/white"

        >
        <com.maoyongxin.myapplication.server.widget.SelectableRoundedImageView
            android:id="@+id/img_fuwu"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="17dp"
            app:sriv_right_top_corner_radius="17dp"
            app:sriv_right_bottom_corner_radius="17dp"
            app:sriv_left_top_corner_radius="17dp"


            />
    </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/fuwuname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="测试数据"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@color/white"

                android:textColor="@color/text_tab"/>




</LinearLayout>