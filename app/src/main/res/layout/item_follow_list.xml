<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_follow_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="10032"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/textSize_bigger_dp" />

        <ImageView
            android:id="@+id/img_follow_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/edit_follow_name"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/img_follow_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取关"
            android:background="@drawable/bg_radius_white"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
           />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_follow_time"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关注时间：2017.8.8"
        android:textColor="@color/text_deco"
        android:textSize="@dimen/textSize_big"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="@color/background"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />
</LinearLayout>