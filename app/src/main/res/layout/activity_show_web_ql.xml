<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_web_url"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.maoyongxin.myapplication.ui.News_web"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
     android:background="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_head"

        android:elevation="@dimen/album_dp_1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"

            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/textSize_normal"
                android:textColor="@color/black_textview"
                android:drawableLeft="@mipmap/icon_back"
                android:drawablePadding="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_normal"
                    android:textColor="@color/black_textview"
                    android:text="服务号"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/contact_fwy"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/contex_shangjia"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/share_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_share_fwuhao"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


        <WebView
            android:layout_below="@+id/ll_head"
            android:id="@+id/web_myContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="none"
            ></WebView>

</RelativeLayout>
