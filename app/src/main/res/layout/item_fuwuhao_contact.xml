<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        >
        <com.maoyongxin.myapplication.server.widget.SelectableRoundedImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:sriv_left_bottom_corner_radius="30dp"
            app:sriv_right_top_corner_radius="30dp"
            app:sriv_right_bottom_corner_radius="30dp"
            app:sriv_left_top_corner_radius="30dp"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职位"
                />

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_tiny"
            android:text="联 系"
            android:background="@drawable/bg_radius_white"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textSize_normal"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>