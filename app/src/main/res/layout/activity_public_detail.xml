<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.maoyongxin.myapplication.ui.PublicDetailActivity">
    <LinearLayout
        android:id="@+id/ll_bar"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/main_theme"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/user_head_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_publish_detail_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="我的发布"
                android:textColor="@color/text_heavy"
                android:textSize="@dimen/textSize_big"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_publish_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="我的主题"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/textSize_big" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_publish_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/textSize_normal_dp"
        android:text="内容"/>

    <com.maoyongxin.myapplication.ui.widget.mylistview.AntGrideVIew
        android:id="@+id/gv_publish_detail_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="5dp"
        android:numColumns="4"
        android:verticalSpacing="5dp"></com.maoyongxin.myapplication.ui.widget.mylistview.AntGrideVIew>
    <ImageView
        android:id="@+id/img_publish_delete"
        android:src="@mipmap/delete_tab"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
