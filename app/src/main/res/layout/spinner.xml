<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/album_dp_1"
    android:layout_marginRight="@dimen/album_dp_4"
    android:elevation="@dimen/album_dp_1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Spinner
            android:id="@+id/hangye_spinner"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:entries="@array/hangy"
            android:spinnerMode="dialog"
            android:focusable="false"
            android:prompt="@string/business"></Spinner>
        <View
            android:layout_width="@dimen/album_dp_1"
            android:layout_height="match_parent"
            android:background="@color/group_list_gray"
            android:layout_margin="6sp"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>