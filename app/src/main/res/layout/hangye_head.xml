<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/WHITE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/redpoint"
                android:text="热门社区"
                android:textColor="@color/black_textview"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:id="@+id/tv_showMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:drawableRight="@mipmap/redpoint"
                android:text="查看更多"
                android:textColor="@color/black_textview"
                android:textSize="@dimen/textSize_normal"
                android:visibility="invisible"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/WHITE"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/shanghui_card1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="6"
                app:cardCornerRadius="5dp"


                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#35000000"
                    />
                <ImageView
                    android:id="@+id/shanghui_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jingying"
                    android:transitionName="qtx" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"

                    android:padding="2dp">

                    <TextView
                        android:id="@+id/shanghui_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="2dp"
                        android:text="热门商会1"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:transitionName="shanghuiname" />

                    <TextView
                        android:id="@+id/shanghui_num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:transitionName="shanghuiNum"
                        android:visibility="gone"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginRight="3dp"
                android:layout_weight="3"
                android:background="@color/WHITE"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/shanghui_card2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/shanghui_img2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hezuo"
                        android:transitionName="qtx" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"


                        >

                        <TextView
                            android:id="@+id/shanghui_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="热门商会2"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:transitionName="shanghuiName" />

                        <TextView
                            android:id="@+id/shanghui_num2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:transitionName="shanghuiNum"
                            android:visibility="gone"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/shanghui_card3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/shanghui_img3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hezuo"
                        android:transitionName="qtx"
                        app:cardCornerRadius="3dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:id="@+id/shanghui_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="热门商会3"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:transitionName="shanghuiName3" />

                        <TextView
                            android:id="@+id/shanghui_num3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.8k会员"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:transitionName="shanghuiNum"
                            android:visibility="gone"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/main_title_backgroud" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="3dp"
            >
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/white"
                app:cardCornerRadius="16dp"
                android:id="@+id/cd_pop"
                android:layout_marginTop="5dp"
                app:cardElevation="2dp"


                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_margin="6dp"

                   >
                    <com.maoyongxin.myapplication.server.widget.SelectableRoundedImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/jingying"
                        app:sriv_left_bottom_corner_radius="10dip"
                        app:sriv_left_top_corner_radius="10dip"
                        app:sriv_right_bottom_corner_radius="10dip"
                        app:sriv_right_top_corner_radius="10dip"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:id="@+id/msg_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="您有一条新信息"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="企业动态"
                android:textColor="@color/half_alpha_black"
                android:textSize="@dimen/textSize_normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/_30_alpha_black"
                android:layout_marginTop="2dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/_30_alpha_black"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>