<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context="com.maoyongxin.myapplication.ui.Mingpianshoucangjia">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:elevation="@dimen/album_dp_1"
            android:layout_marginRight="@dimen/album_dp_1"
            android:layout_marginLeft="@dimen/album_dp_1"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="收藏夹"
                android:textColor="@color/black_textview"
                android:textSize="@dimen/textSize_bigger_dp"
                android:textStyle="bold" />

        </RelativeLayout>
        <ListView
            android:id="@+id/mingpianshoucangjia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/album_dp_4"
            android:divider="@color/white"
            ></ListView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
