<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <com.maoyongxin.myapplication.server.widget.SelectableRoundedImageView
        android:id="@+id/img_publish_head"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        app:sriv_left_bottom_corner_radius="3dip"
        app:sriv_left_top_corner_radius="3dip"
        app:sriv_right_bottom_corner_radius="3dip"
        app:sriv_right_top_corner_radius="3dip" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_publish_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的发布"
                android:textColor="@color/text_heavy"
                android:textSize="@dimen/textSize_big"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/textSize_big" />

            <TextView
                android:id="@+id/tv_myPublish_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="撒大苏打"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/textSize_big" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_dp_1"
            android:background="@color/background"></View>

        <TextView
            android:id="@+id/tv_myPublish_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求购书桌一个"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/textSize_normal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务类型："
                android:textColor="@color/text_heavy"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:id="@+id/tv_myPublish_serviceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="采购"
                android:textColor="@color/text_heavy"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="right"
                android:text="物品类型："
                android:textColor="@color/text_heavy"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:id="@+id/tv_myPublish_productKind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书桌"
                android:textColor="@color/text_heavy"
                android:textSize="@dimen/textSize_normal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>