<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/album_dp_10"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/cpnNameRcd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:layout_weight="1"
            android:maxLines="1"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/teleInfo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/icon_ctele2"
            android:layout_marginRight="15dp"
            />

        <ImageView
            android:id="@+id/smgInfo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/icon_cmsg2"
            android:layout_marginRight="15dp"
            />

        <ImageView
            android:id="@+id/scInfo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/icon_ilike2"
            android:layout_marginRight="15dp"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cpnTele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="13198511889"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/rcdTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/album_dp_6"

            android:text="time"/>






    </LinearLayout>

</LinearLayout>