<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="2dp">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg"
                android:scaleType="centerCrop">

            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="彼信"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:textSize="@dimen/textSize_bigger_dp"
                />
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余晟睿"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical|center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="会员编号：10000"
                    android:textSize="@dimen/textSize_small"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/vipNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="会员到期日：2018-10-1"
                    android:textSize="@dimen/textSize_small"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1个月"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/textSize_bigger_dp" />

            <TextView
                android:id="@+id/tv_1Mmoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#d9720b"
                android:textSize="@dimen/textSize_bigger_dp" />

            <Button
                android:id="@+id/btn_1MPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_radius_orange"
                android:text="开通"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_normal_dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_tips_color"
            android:visibility="gone"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="3个月"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/textSize_bigger_dp" />

            <TextView
                android:id="@+id/tv_3Mmoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#d9720b"
                android:textSize="@dimen/textSize_bigger_dp" />

            <Button
                android:id="@+id/btn_3MPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_radius_orange"
                android:text="开通"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_normal_dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_tips_color"
            android:visibility="gone"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:text="年费"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/textSize_bigger_dp" />

            <TextView
                android:id="@+id/tv_Ymoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#d9720b"
                android:textSize="@dimen/textSize_bigger_dp" />

            <Button
                android:id="@+id/btn_YPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_radius_orange"
                android:text="开通"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_normal_dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background"></View>



    </LinearLayout>
</LinearLayout>