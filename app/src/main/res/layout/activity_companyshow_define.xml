<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.maoyongxin.myapplication.ui.editapp.minefragment.CompanyshowDefine">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <com.maoyongxin.myapplication.server.widget.SelectableRoundedImageView
            android:id="@+id/mainpic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="30dp"
            android:background="@null"
            android:elevation="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/jingying"
            app:sriv_left_bottom_corner_radius="75dp"
            app:sriv_left_top_corner_radius="75dp"
            app:sriv_right_bottom_corner_radius="75dp"
            app:sriv_right_top_corner_radius="75dp" />

        <EditText
            android:id="@+id/fuwushangName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/background"
            android:padding="5dp"
            android:hint="请输入服务商名称" />
        <TextView
            android:id="@+id/next_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/textSize_bigger_dp"
            android:textColor="@color/blue_tiny"
            android:text="下一步"/>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
