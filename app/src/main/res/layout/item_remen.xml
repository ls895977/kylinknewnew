<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rc_corner_style"
    android:layout_marginBottom="@dimen/album_dp_4"
    android:elevation="@dimen/album_dp_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"

        android:elevation="@dimen/album_dp_4"

        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/remen"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"

                android:gravity="left"
                android:text="热门社区"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_normal" />


        </FrameLayout>

 <ListView
     android:id="@+id/remen_list"
     android:layout_width="match_parent"
     android:layout_height="match_parent"></ListView>
    </LinearLayout>
</LinearLayout>