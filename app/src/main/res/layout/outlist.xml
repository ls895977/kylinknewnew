<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:id="@+id/linh"
    android:gravity="center_vertical"
    android:orientation="vertical"
   >


        <LinearLayout
            android:id="@+id/toplin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="彼  信"
                android:textSize="30dp"
                android:textColor="@color/black_textview"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/BLACK"
                android:layout_marginTop="2dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/BLACK"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商业头条"
                android:textSize="15dp"
                android:textColor="@color/black_textview"
                />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
             >



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/notice_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="新闻标题"
                    android:textColor="@color/def_text_2"
                    android:textSize="@dimen/textSize_big"
                    android:textStyle="normal"
                    android:paddingTop="2dp"
                    android:lineSpacingExtra="8dp"/>

                <TextView
                    android:id="@+id/notice_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="新闻简介"
                    android:textColor="@color/def_text_4"
                    android:textSize="@dimen/textSize_small"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="15dp"
                    android:lineSpacingExtra="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"


                    >

                    <TextView
                        android:id="@+id/notice_sender1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="2018/8/8"
                        android:textColor="@color/def_sub_3_gray_99"
                        android:textSize="@dimen/textSize_small" />

                    <TextView

                        android:visibility="visible"
                        android:id="@+id/notice_sender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:drawableLeft="@mipmap/readed"
                        android:layout_gravity="right"
                        android:text="neir"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/def_sub_3_gray_99"
                        android:textSize="@dimen/textSize_small"
                        android:gravity="center_vertical"
                        android:drawablePadding="3dp"
                        />
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/notice_image"
                android:layout_width="100dp"
                android:layout_height="88dp"
                android:src="@drawable/lunbo1"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop"/>

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/background"
        android:layout_margin="5dp"
        />







</LinearLayout>